{
  "name": "graphs-renderer",
  "version": "1.0.0",
  "description": "A library for rendering the graphs: CFD, Scatterplot and Histogram with d3.js",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "postinstall": "npm run build:prod",
    "watch": "webpack --mode development --watch",
    "lint": "eslint 'src/**/*.{js,jsx}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{js,jsx}' --fix",
    "prettier": "prettier 'src/**/*.{js,jsx,json,css}' --check",
    "format": "prettier --write 'src/**/*.{js,jsx,json,css}'",
    "check": "npm run prettier && npm run lint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "author": "Claudia Givan",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "babel-loader": "^9.1.2",
    "d3": "^7.6.1",
    "imports-loader": "^4.0.1",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "transform": {},
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/__mocks__/styleMock.js"
    }
  },
  "peerDependencies": {
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"

  },
  "devDependencies": {
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  }
}
